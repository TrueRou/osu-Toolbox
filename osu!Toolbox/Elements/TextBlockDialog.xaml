<UserControl x:Class="osu_Toolbox.Views.Dialog.TextBlockDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" >
    <StackPanel Background="White" Width="300">
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center" x:Name="textBlock_Message" Margin="10" FontSize="18" Grid.Row="0" ></TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,15,10">
            <Button Height="35" Width="50" FontSize="18" Padding="4" IsDefault="True" Style="{DynamicResource MaterialDesignFlatButton}" Cursor="Hand" Click="Button_Cancel_Click">
                了解
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
